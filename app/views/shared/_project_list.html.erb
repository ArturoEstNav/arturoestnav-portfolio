<div class="container-projects">
  <h2>
    Software projects
  </h2>
  <ul>
    <li>
      <!-- Remote scanner starts here -->
      <div class="container-project">
        <div class="project-image">
          <%= cl_image_tag "remote-scanner-1_o4w8kr", height: 190, width: 330, crop: :fill %>        </div>

        <div class="project-description">
          <h4><%= Project.first.name %></h4>
          <p class="text-language"> <%= Project.first.description %> </p>
          <%= link_to "Visit page", Project.first.url, target: :_blank, class: "link text-red" %>
        </div>
      </div>
    </li>
    <!-- Clarify starts here -->
    <li>
      <div class="container-project">
        <div class="project-image">
          <%= cl_image_tag "clarify-1_f8mobf", height: 190, width: 330, crop: :fill %>
        </div>
        <div>
          <h4><%= Project.last.name %></h4>
          <p class="text-language"> <%= Project.last.description %> </p>
          <%= link_to "Visit page", Project.last.url, target: :_blank, class: "link text-red" %>
        </div>
      </div>
    </li>
  </ul>
</div>
